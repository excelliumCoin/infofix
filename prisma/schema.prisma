generator client {
  provider      = "prisma-client-js"
  // Linux + OpenSSL 3 (Vercel) i√ßin motoru dahil et
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id         String   @id @default(cuid())
  taskId     Int
  user       String
  action     Int
  proofUrl   String
  note       String?
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  approvedAt DateTime?
  approvedBy String?
  amountWei  String?
  nonce      String?
  deadline   String?
  signature  String?
}
